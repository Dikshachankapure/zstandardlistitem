								<Label text="City"/>
								<Input id="City1"/>
								<Label text="Region"/>
								<Input id="rg1"/>
								<Label text="PostalCode"/>
								<Input id="postcd"/>
								<Label text="Country"/>
								<Select id="country">
									<items>
										<core:Item text="England" key="England"/>
										<core:Item text="Germany" key="Germany"/>
										<core:Item text="USA" key="USA"/>
									</items>
								</Select>
								<Label text="Phone"/>
								<Input id="ph1"/>
								<Label text="Fax"/>
								<Input id="fax1"/>
